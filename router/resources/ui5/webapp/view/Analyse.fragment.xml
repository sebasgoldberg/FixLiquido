<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<VBox class="sapUiSmallMargin">
		<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			title="Análise Pedido"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>

				<Label 
                    text="Pedido a Analizar"
                    />
				<Input value="{view>/pedidoAnalisar}" />

				<Label 
                    text="" 
                    />
                <Button press="" text="Analisar" type="Emphasized"/>

			</f:content>
		</f:SimpleForm>
	</VBox>

	<VBox class="sapUiSmallMargin">
		<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			title="Simular Cálculo Para GUID"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>

				<Label 
                    text="GUID para simulação"
                    />
				<Input value="{view>/guidSimulacao}" />

				<Label 
                    text="" 
                    />
                <Button press="" text="Simular" type="Emphasized"/>

			</f:content>
		</f:SimpleForm>
	</VBox>

</core:FragmentDefinition>

