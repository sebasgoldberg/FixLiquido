<mvc:View
	controllerName="jsg.fixpo.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Page
		id="page"
		title="{i18n>title}"
		showHeader="true">

		<core:Fragment fragmentName="jsg.fixpo.view.Metrics" type="XML" />
		<core:Fragment fragmentName="jsg.fixpo.view.Config" type="XML" />
		<core:Fragment fragmentName="jsg.fixpo.view.Analyse" type="XML" />
		<core:Fragment fragmentName="jsg.fixpo.view.Trace" type="XML" />

		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Iniciar" press="onStart" />
				<Button type="Reject" text="Parar" press="onStop" />
			</OverflowToolbar>
		</footer>

	</Page>
</mvc:View>